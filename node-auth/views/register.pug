extends layout

block content
    h1= title
    hr
    form.form-horizontal(method="post" action="/users/register" class="col-xs-12 col-sm-12 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3")
        .form-group
            label.col-sm-2.control-label(for='inputEmail1') Name
            .col-sm-10.col-md-10.col-lg-10
                input#inputEmail1.form-control(type='text', placeholder='Name')
        .form-group
            label.col-sm-2.control-label(for='inputEmail4') Username
            .col-sm-10.col-md-10.col-lg-10
                input#inputEmail4.form-control(type='text', placeholder='Username')
        .form-group
            label.col-sm-2.control-label(for='inputEmail2') Email
            .col-sm-10.col-md-10.col-lg-10
                input#inputEmail2.form-control(type='email', placeholder='Email')
        .form-group
            label.col-sm-2.control-label(for='inputPassword3') Password
            .col-sm-10.col-md-10.col-lg-10
                input#inputPassword3.form-control(type='password', placeholder='Password')
        .form-group
            label.col-sm-2.control-label(for='inputPassword5') Confirm Password
            .col-sm-10.col-md-10.col-lg-10
                input#inputPassword5.form-control(type='password', placeholder='Confirm Password')
        .form-group
            .col-sm-offset-2.col-sm-10
                .checkbox
                    label
                        input(type='checkbox')
                        |  Remember me
        .form-group
            .col-sm-offset-2.col-sm-10
                button.btn.btn-default(type='submit') Sign in